{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A dashboard with cross-highlighting.",
  "data": {"url": "https://raw.githubusercontent.com/leihong1999/FIT3179/main/EntriesGender.csv"},
  "vconcat": [
    {
      "width": 600,
      "layer": [ 
        {
        "transform": [{
          "filter": {"param": "pts"}
        }],
        "mark": "circle",
        "encoding": {
          "x": {
            "field": "Male",
            "type": "quantitative"
          },
          "y": {
            "field": "Female",
            "type": "quantitative"
          },
          "size": {"field": "Total", "type": "quantitative"},
          "color": {
            "field": "Discipline",
            "type":"nominal",
            "legend":false
            }      
        }
      }]
    }, {
      "width": 600,
      "height": 100,
      "mark": "bar",
      "params": [{
        "name": "pts",
        "select": {"type": "point", "encodings": ["x"]}
      }],
      "encoding": {
        "x": {"field": "Discipline"},
        "y": {"field": "Total", "type": "quantitative"},
        "color": {
          "condition": {
            "param": "pts",
            "field": "Discipline",
            "type":"nominal",
            "legend":false
          },
          "value": "grey"
        }
      }
    }
  ],
  "resolve": {
    "legend": {
      "color": "independent",
      "size": "independent"
    }
  }
}
