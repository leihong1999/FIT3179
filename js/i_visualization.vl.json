    "url": "https://raw.githubusercontent.com/leihong1999/FIT3179/main/EntriesGender.csv"
  },
  "params": [
    {
      "name": "continent_highlight",
      "select": {"type": "point", "fields": ["Discipline"]},
      "bind": "legend"
    },
    {
