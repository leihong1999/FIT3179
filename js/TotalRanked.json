{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 5 In Gold Medals",
  "data": {
    "url":"https://raw.githubusercontent.com/leihong1999/FIT3179/main/Medals.csv"
  },
  "transform": [
    {
      "window": [{
        "op": "rank",
        "as": "rank"
      }],
      "sort": [{ "toNumber":{"field": "Total"}, "order": "descending" }]
    }, {
      "filter": "datum.rank <= 5"
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
        "field": "Total",
        "type": "quantitative"
    },
    "y": {
        "field": "Team/NOC",
        "type": "nominal",
        "sort": {"field": "Total", "op": "average", "order":"descending"}
    },
    "color": {
      "field": "Team/NOC",
      "type":"nominal",
      "legend":false
    },
    "tooltip": [
      {"field": "Total", "type": "quantitative"}
   ]
  }
}
